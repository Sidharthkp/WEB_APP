<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No:</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width: 200px;" src="/product-images/{{this._id}}.jpg" alt="image"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" type="button">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" type="button" onclick="return confirm('Are you sure you want to delete the item {{this.Name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>